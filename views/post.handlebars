<div class="post" data-post-id="{{post.id}}">
  <h2>{{post.name}}</h2>
  <p>{{post.description}}</p>
  <div class="post-details">
    <p class="created-by">Created by: {{post.user.name}}</p>
    <p class="created-on">Created on {{format_date post.date_created}}</p>
  </div>
</div>
<h3>Comments:</h3>
{{#each post.comments as |comment|}}
  <div class="comment">
    <p>{{comment.text}}</p>
    <p>Posted by: {{comment.user.name}}</p>
  </div>
{{/each}}

<script src="./js/post.js"></script>
